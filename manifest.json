{
  "manifest_version": 3,
  "name": "TabAttack",
  "version": "1.0",
  "description": "Randomly changes your tab titles",
  "permissions": ["tabs", "scripting", "storage"],
  "host_permissions": ["<all_urls>"],
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "dist/background.js",
    "type": "module"
  },
  "icons": {
    "48": "icon48.png",
    "128": "icon128.png"
  }
} 